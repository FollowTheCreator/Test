@model Web.Models.indexViewModel
<style>
    img {
        max-width: 400px;
    }
</style>
<h1>Новостная лента</h1>

<form method="post" action="">
    <div class="form-group">
        <label for="sel1">Источник ленты</label>
        <select class="form-control" name="source">
            <option value="%">Все</option>
            <option value="Habr.com">Habr.com</option>
            <option value="Interfax.by">Interfax.by</option>
        </select>
    </div>

    <label class="radio-inline"><input type="radio" name="sort" value="date" checked>Сортировать по дате</label>
    <label class="radio-inline"><input type="radio" name="sort" value="source">Сортировать по источнику</label>
    <br />

    <input value="Просмотреть" type="submit" class="btn btn-default"></input>
</form>

    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>Источник</th>
                <th>Название новости</th>
                <th>Описание новости</th>
                <th>Дата публикации</th>
            </tr>
            @foreach (var item in Model.rssList)
            {
                <tr>
                    <td>@item.source</td>
                    <td><a href="@item.link" target="_blank">@Html.Raw(item.title)</a></td>
                    <td>@Html.Raw(item.description)</td>
                    <td>@item.date</td>
                </tr>
            }
        </table>
    </div>
    <br />

    <div class="btn-group">
        @Html.pageLinks(Model.pageInfo, x => Url.Action("Index", new { page = x }))
    </div>